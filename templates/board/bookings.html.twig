<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Bookings on desk <div style="display:inline-block;width:18px;height:18px;background-color:{{ desk.color }};"></div> #{{ desk.number }}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <center>
        {% for time, slot in slots %}
            {% if not slot %}
                <a href="{{ path('book_now', {id: desk.id, slot: time}) }}"
                   class="btn btn-primary"
                   style="width: 80%; margin-top: 10px; margin-bottom: 10px; color:white; text-align:center;" class="bg-secondary">
                    <span style="font-size: 18px;">{{ time|replace({'-': '➡️'}) }}</span>
                </a>
            {% else %}
                <div style="width: 80%; margin-top: 10px; margin-bottom: 10px; color:white; text-align:center;" class="bg-secondary">
                    <div style="font-size: 18px;">{{ time|replace({'-': '➡️'}) }}</div>
                    <div style="font-size: 14px;">Booked by <b>{{ slot.person }}</b></div>
                </div>
            {% endif %}
        {% endfor %}
        </center>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    </div>
</div>
